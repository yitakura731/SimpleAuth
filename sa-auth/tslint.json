{
    "rulesDirectory": [
      "tslint-plugin-prettier"
    ],
    "extends": [
      "tslint:latest",
      "tslint-config-prettier"
    ],
    "rules": {
      "object-literal-sort-keys": false,
      "prettier": [
        true, {
          "printWidth": 140,
          "tabWidth": 2,
          "useTabs": false,
          "semi": true,
          "singleQuote": true,
          "trailingComma": "all",
          "bracketSpacing": true,
          "arrowParens": "always"
        }
      ]
    }
  }